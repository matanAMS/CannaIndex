<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomeactivitybackground"
    android:orientation="vertical"

    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="20dp"
        >


        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:weightSum="4.75"
        android:padding="50dp"
        >

        <Button
            android:id="@+id/btnWeedInfo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginTop="100dp"
            android:backgroundTint="#0a9396"
            android:gravity="center"
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="מידע על הצמח"
            android:drawableRight="@drawable/baseline_info_24"
            android:paddingRight="20dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="0.25"/>

        <Button
            android:id="@+id/btnAddStrain"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:backgroundTint="#0a9396"
            android:gravity="center"
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="הוספת זן חדש"
            android:drawableRight="@drawable/baseline_add_24"
            android:paddingRight="20dp"
            />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="0.25"/>
        <Button
            android:id="@+id/btnCompanies"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:backgroundTint="#0a9396"
            android:gravity="center"
            android:textStyle="bold"
            android:onClick="onClick"
            android:text="לרשימת החברות"
            android:drawableRight="@drawable/baseline_list_24"
            android:paddingRight="20dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="0.25"/>

        <Button
            android:id="@+id/CannabMethod"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:backgroundTint="#0a9396"
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="שיטות צריכה"
            android:drawableRight="@drawable/baseline_science_24"
            android:paddingRight="20dp"
            />


    </LinearLayout>
</LinearLayout>